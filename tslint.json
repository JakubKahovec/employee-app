{
  "extends": ["tslint:latest"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  },
  "rules": {
    "adjacent-overload-signatures": true,
    "align": {
      "options": ["parameters", "statements"]
    },
    "array-type": [true, "array-simple"],
    "arrow-parens": false,
    "arrow-return-shorthand": true,
    "ban-ts-ignore": false,
    "ban-types": {
      "options": [
        ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
        [
          "Function",
          "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."
        ],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "ban-comma-operator": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": [true, "ignore-same-line"],
    "cyclomatic-complexity": [true, 15],
    "eofline": true,
    "forin": false,
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "interface-over-type-literal": true,
    "jsdoc-format": false,
    "label-position": true,
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": [true, 10, "exclude-class-expressions"],
    "max-line-length": [true, 120],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "alphabetize": false,
        "order": [
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "public-static-method",
          "protected-static-method",
          "private-static-method",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "new-parens": true,
    "newline-before-return": false,
    "no-angle-bracket-type-assertion": true,
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 1],
    "no-console": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": true,
    "no-empty-interface": false,
    "no-eval": true,
    "no-import-side-effect": [
      true,
      {
        "ignore-module": "(.html|.css)$"
      }
    ],
    "no-invalid-template-strings": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-inferrable-types": [true, "ignore-params"],
    "no-internal-module": true,
    "no-implicit-dependencies": false,
    "no-magic-numbers": [false, -1, 0, 1, 2, 10, 60, 24, 12, 36000, 100, 1000],
    "no-misused-new": true,
    "no-mergeable-namespace": true,
    "no-namespace": [false, "allow-declarations"],
    "no-non-null-assertion": false,
    "no-var-requires": true,
    "no-object-literal-type-assertion": false,
    "no-reference": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-submodule-imports": [
      true,
      "rxjs",
      "@modules",
      "@core",
      "@common"
    ],
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-class": true,
    "no-unused-expression": true,
    "no-unsafe-finally": true,
    "no-unnecessary-initializer": true,
    "no-var-keyword": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "object-literal-shorthand": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
    "prefer-object-spread": false,
    "prefer-function-over-method": false,
    "prefer-for-of": true,
    "prefer-const": true,
    "space-before-function-paren": false,
    "quotemark": [true, "double", "avoid-escape"],
    "radix": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "switch-default": true,
    "switch-final-break": true,
    "trailing-comma": true,
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "use-isnan": true,
    "unified-signatures": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": false
  }
}
